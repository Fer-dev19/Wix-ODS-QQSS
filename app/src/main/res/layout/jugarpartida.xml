<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainmenuwithtitle">

    <Button
        android:id="@+id/buttonGuia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="25dp"
        android:onClick="guiaUsuario"
        android:text="Guia de usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bpartida"
        android:layout_width="311dp"
        android:layout_height="78dp"
        android:layout_marginTop="380dp"
        android:onClick="jugar"
        android:text="Jugar Partida"
        android:textSize="70px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bperfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:onClick="perfil"
        android:text="Ver Perfil"
        app:layout_constraintEnd_toEndOf="@+id/bconfiguracion"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="@+id/bconfiguracion"
        app:layout_constraintTop_toBottomOf="@+id/bconfiguracion" />

    <Button
        android:id="@+id/bconfiguracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:onClick="configuracion"
        android:text="Configuración"
        app:layout_constraintEnd_toEndOf="@+id/bpartida"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@+id/bpartida"
        app:layout_constraintTop_toBottomOf="@+id/bpartida" />

    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="28dp"
        android:onClick="cerrarSes"
        android:text="Cerrar Sesión"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonCobertura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:onClick="clickCobertura"
        android:text="Cobertura"
        app:layout_constraintEnd_toEndOf="@+id/bperfil"
        app:layout_constraintStart_toStartOf="@+id/bperfil"
        app:layout_constraintTop_toBottomOf="@+id/bperfil" />
</androidx.constraintlayout.widget.ConstraintLayout>