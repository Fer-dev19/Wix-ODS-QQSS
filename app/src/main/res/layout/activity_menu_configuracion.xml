<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sosteniblesubsuelo"
    tools:context=".menu_configuracion">

    <TextView
        android:id="@+id/textView60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.5"
        android:shadowRadius="1.7"
        android:text="CONFIGURACIÃ“N"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewVol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="SILENCIAR"
        android:textColor="#000000"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView60"
        app:layout_constraintStart_toStartOf="@+id/textView60"
        app:layout_constraintTop_toBottomOf="@+id/textView60" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:onClick="cerrarApp"
        android:text="Salir de la app"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintStart_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:onClick="cerrarConfig"
        android:text="Reanudar"
        app:layout_constraintEnd_toEndOf="@+id/imageMute"
        app:layout_constraintStart_toStartOf="@+id/imageMute"
        app:layout_constraintTop_toBottomOf="@+id/imageMute" />

    <ImageButton
        android:id="@+id/imageMute"
        android:layout_width="56dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/purple_500"
        android:onClick="silenciarConfig"
        android:scaleType="fitCenter"
        android:src="@drawable/audio_on"
        app:layout_constraintEnd_toEndOf="@+id/textViewVol"
        app:layout_constraintStart_toStartOf="@+id/textViewVol"
        app:layout_constraintTop_toBottomOf="@+id/textViewVol" />

</androidx.constraintlayout.widget.ConstraintLayout>